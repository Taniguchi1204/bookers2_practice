<td><% if book.favorite_include?(current_user) %>
      <%= link_to book_favorites_path(book), method: :delete do %>
        <i class="far fa-heart"></i><%= book.favorites.count %>
      <% end %>
    <% else %>
      <%= link_to book_favorites_path(book), method: :post do %>
        <i class="far fa-heart"></i><%= book.favorites.count %>
      <% end %>
    <% end %></td>